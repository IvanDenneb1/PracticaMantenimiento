<Page
    x:Class="SumaDosNumeros.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SumaDosNumeros"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel>
            <TextBlock Margin="10">Valor uno</TextBlock>
            <TextBox x:ConnectionId='1' Margin="10" Name="tx1"></TextBox>
            <TextBlock Margin="10">Valor dos</TextBlock>
            <TextBox x:ConnectionId='2' Margin="10" Name="tx2"></TextBox>
            <Button x:ConnectionId='3' Margin="10"                     >Sumar</Button>
            <TextBlock x:ConnectionId='4' Margin="10" Name="Resultado">Resultado</TextBlock>
        </StackPanel>

    </Grid>
</Page>

